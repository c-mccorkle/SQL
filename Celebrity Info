CREATE TABLE popular_project (
id INTEGER PRIMARY KEY,
name TEXT,
celebrities_id INTEGER);

INSERT INTO popular_project VALUES (1, 'Thriller', 1);
INSERT INTO popular_project VALUES (2, 'Purple Rain', 2);
INSERT INTO popular_project VALUES (3, 'Cold Blooded', 3);
INSERT INTO popular_project VALUES (4, 'La La Land', 4);
INSERT INTO popular_project VALUES (5, 'Fast and Furious', 5);
INSERT INTO popular_project VALUES (6, 'XXX', 6);

    
SELECT celebrities.name AS Name, profession.type AS Profession
FROM celebrities
JOIN profession
    ON celebrities.id = profession.celebrities_id;

SELECT celebrities.name as Celebrity_Name, income.net_worth AS Net_Worth
FROM celebrities
JOIN income
    ON celebrities.id = income.celebrities_id
ORDER BY income.net_worth DESC;

SELECT celebrities.name AS Celebrity_Name, popular_project.name AS Project_Name
FROM celebrities
JOIN popular_project
    ON celebrities.id = popular_project.celebrities_id;
    

SELECT ROUND(AVG(income.net_worth)) AS Average_Celebrity_Worth
FROM income;

