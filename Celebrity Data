# Select celebrity names along with their profession.

SELECT celebrities.name AS Name, profession.type AS Profession
FROM celebrities
JOIN profession
    ON celebrities.id = profession.celebrities_id;
    
# Display top 3 highest net worth celebrities ordered by net worth greatest to least.  

SELECT celebrities.name as Celebrity_Name, income.net_worth AS Net_Worth
FROM celebrities
JOIN income
    ON celebrities.id = income.celebrities_id
ORDER BY income.net_worth DESC
LIMIT 3;

# Display celebrity names along with their popular project.  

SELECT celebrities.name AS Celebrity_Name, popular_project.name AS Project_Name
FROM celebrities
JOIN popular_project
    ON celebrities.id = popular_project.celebrities_id;
    
# Display average worth of all celebrities.  

SELECT ROUND(AVG(income.net_worth)) AS Average_Celebrity_Worth
FROM income;

